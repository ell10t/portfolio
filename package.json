{
    "name": "elliotmcintyre.com",
    "version": "1.0.0",
    "description": "Nuxt.js Portfolio",
    "author": "Elliot McIntyre",
    "private": true,
    "scripts": {
        "dev": "nuxt-ts",
        "build": "cross-env DEPLOY_ENV=GH_PAGES nuxt-ts build",
        "generate": "cross-env DEPLOY_ENV=GH_PAGES nuxt-ts generate",
        "deploy": "push-dir --dir=dist --branch=gh-pages --cleanup",
        "start": "nuxt-ts start",
        "lint": "eslint --ext .ts,.js,.vue --ignore-path .gitignore .",
        "test": "jest"
    },
    "lint-staged": {
        "*.{ts,js,vue}": "eslint"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "devDependencies": {
        "@nuxt/typescript-build": "^0.2.6",
        "@nuxt/typescript-runtime": "^0.1.5",
        "@nuxtjs/eslint-config": "^1.0.1",
        "@nuxtjs/eslint-config-typescript": "^0.1.3",
        "@nuxtjs/eslint-module": "^1.0.0",
        "@nuxtjs/svg": "^0.1.6",
        "@nuxtjs/tailwindcss": "^1.0.0",
        "@vue/test-utils": "^1.0.0-beta.27",
        "babel-eslint": "^10.0.1",
        "babel-jest": "^24.1.0",
        "color": "^3.1.2",
        "cross-env": "^5.2.1",
        "eslint": "^6.1.0",
        "eslint-config-prettier": "^4.1.0",
        "eslint-plugin-nuxt": ">=0.4.2",
        "eslint-plugin-prettier": "^3.0.1",
        "husky": "^2.6.0",
        "jest": "^24.1.0",
        "lint-staged": "^8.2.1",
        "nuxt": "^2.0.0",
        "prettier": "^1.16.4",
        "push-dir": "^0.4.1",
        "vue-jest": "^4.0.0-0"
    }
}
